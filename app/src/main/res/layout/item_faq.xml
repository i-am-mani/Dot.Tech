<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_faq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:animateLayoutChanges="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/root_item_faq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:padding="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textAppearance="@style/SubTitleTextRubik"
                tools:text="How are you ?" />

            <ImageButton
                android:id="@+id/imbtn_toggle_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_down" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_faq_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/NormalText"
            android:visibility="gone"
            tools:text="I am Fine" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>