<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_faq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/root_item_faq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_faq_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:paddingStart="8dp"
                android:textAppearance="@style/NormalTextRubik"
                android:textColor="@color/Blue800"
                tools:text="How are you ?" />

            <ImageButton
                android:id="@+id/imbtn_toggle_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:alpha="0.3"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_down"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_faq_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="24dp"
            android:textAppearance="@style/NormalText"
            android:visibility="gone"
            tools:text="I am Fine" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>