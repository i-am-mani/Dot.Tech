<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/MaterialGreen"
        android:elevation="10dp"
        android:src="@drawable/ic_check"
        android:tint="#558B2F"
        app:borderWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:useCompatPadding="false" />

    <TextView
        android:id="@+id/tv_event_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_end_cut_rectangle"
        android:fontFamily="@font/eczar_medium"
        android:paddingStart="8dp"
        android:paddingEnd="34dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        tools:text="Blitz Code" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:clipToPadding="false"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tv_event_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_margin"
            android:layout_gravity="top"
            android:elevation="4dp"
            android:background="@drawable/fading_white_gradient" />

        <View
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/fading_white_gradient_lr"
            android:elevation="4dp" />

        <View
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/fading_white_gradient_lr"
            android:elevation="4dp"
            android:rotation="180" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_event_images"
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_margin"
            android:layout_gravity="bottom"
            android:background="@drawable/fading_white_gradient"
            android:rotation="180" />
    </FrameLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34610122" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_title">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_shadow"
            android:layout_gravity="top"
            android:elevation="4dp"
            android:background="@drawable/fading_white_gradient" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/tv_event_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dosis"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_margin"
            android:layout_gravity="bottom"
            android:background="@drawable/fading_white_gradient"
            android:elevation="4dp"
            android:rotation="180" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>