<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- navigation icon color -->
        <item name="colorControlNormal">#E0E0E0</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">#E0E0E0</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleTextEczar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:fontFamily">@font/eczar_medium</item>
    </style>

    <style name="TitleTextRubik" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="SubTitleTextRubik" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_sub_title_size</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="SubTitleTextEczar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_sub_title_size</item>
        <item name="android:fontFamily">@font/eczar_medium</item>
    </style>

    <style name="SubTitleTextDosis">
        <item name="android:textSize">@dimen/text_sub_title_size</item>
        <item name="android:fontFamily">@font/dosis</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/eczar</item>
    </style>

    <style name="NormalText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/dosis</item>
    </style>

    <style name="NormalTextRubik" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="ButtonTextEczar" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/eczar</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="DateTimeAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/eczar_medium</item>
    </style>

    <style name="ProfileTitleLight">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="ProfileSubTitleLight">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
